	           <artifactId>replacer</artifactId>
	           <version>1.5.3</version>
	           <executions>
	               <execution>
	               	   <id>target-top</id>
	                   <phase>process-classes</phase>
	                   <goals>
	                       <goal>replace</goal>
	                   </goals>    
	                   <configuration>
			               <filesToInclude>${basedir}/_build/html/**/*.svg</filesToInclude>
			               <replacements>
			                   <replacement>
			                       <token><![CDATA[<a]]></token>
			                       <value><![CDATA[<a target="_top"]]></value>
			                   </replacement>         
			               </replacements>
			           </configuration>               
	               </execution>
	               <execution>
	               	   <id>placeholder</id>
	                   <phase>generate-sources</phase>
	                   <goals>
	                       <goal>replace</goal>
	                   </goals>    
	                   <configuration>
			               <filesToInclude>${project.build.directory}/xml/**/*.xml</filesToInclude>
			               <replacements>
			                   <replacement>
			                       <token><![CDATA[<ref]]></token>
			                       <value><![CDATA[[]<ref]]></value>
			                   </replacement>         
			                   <replacement>
			                       <token><![CDATA[<xrefsect]]></token>
			                       <value><![CDATA[[]<xrefsect]]></value>
			                   </replacement>
			                   <replacement>
			                       <token><![CDATA[<itemizedlist]]></token>
			                       <value><![CDATA[[]<itemizedlist]]></value>
			                   </replacement> 
			                   <replacement>
			                       <token><![CDATA[<emphasis]]></token>
			                       <value><![CDATA[[]<emphasis]]></value>
			                   </replacement>   
			                   <replacement>
			                       <token><![CDATA[<plantuml]]></token>
			                       <value><![CDATA[[]<plantuml]]></value>
			                   </replacement>    
			                   <replacement>
			                       <token><![CDATA[<ulink]]></token>
			                       <value><![CDATA[[]<ulink]]></value>
			                   </replacement>    
			               </replacements>
			           </configuration>               
	               </execution>
	           </executions>
	           
