			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>generate-doxygen-doc</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>mono</executable>
							<arguments>
								<argument>generator/Terradue.Doc.DoxyDoc.exe</argument>
								<argument>${project.build.directory}/xml</argument>
								<argument>-o</argument>
								<argument>${project.build.directory}/rst/in</argument>
								<argument>-v</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>generate-doc</id>
						<phase>compile</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>make</executable>
							<arguments>
								<argument>clean</argument>
								<argument>html</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>generate-nojekyll</id>
						<phase>compile</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<workingDirectory>${basedir}/_build/html</workingDirectory>
							<executable>touch</executable>
							<arguments>
